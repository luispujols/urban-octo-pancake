{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "dotnet: run",
			"type": "shell",
			"command": "dotnet run --project SocOps/SocOps.csproj",
			"isBackground": true,
			"problemMatcher": {
				"pattern": {
					"regexp": "."
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^.*Building.*",
					"endsPattern": "^.*Application started.*"
				}
			},
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "dotnet: build",
			"type": "shell",
			"command": "dotnet build SocOps/SocOps.csproj",
			"group": "build",
			"problemMatcher": "$msCompile"
		}
	]
}