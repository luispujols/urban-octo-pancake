@using SocOps.Models

<div class="flex flex-col min-h-full">
    <!-- Header -->
    <header class="flex items-center justify-between p-3 bg-card border-b border-cyan">
        <button
            @onclick="OnReset"
            class="text-cyan text-sm px-3 py-1.5 rounded border border-cyan transition-all hover:shadow-neon">
            ← EXIT
        </button>
        <h1 class="font-bold text-cyan font-display tracking-wider neon-text">SOC OPS</h1>
        <div class="w-16"></div>
    </header>

    <!-- Instructions -->
    <p class="text-center text-gray-500 text-sm py-2 px-4 font-display uppercase tracking-wider">
        [ Tap to mark targets ]
    </p>

    <!-- Bingo indicator -->
    @if (HasBingo)
    {
        <div class="neon-border-pink text-magenta text-center py-3 font-bold font-display uppercase tracking-wider animate-flicker">
            ⚡ BINGO ACHIEVED ⚡ MISSION COMPLETE
        </div>
    }

    <!-- Board -->
    <div class="flex-1 flex items-center justify-center p-3">
        <BingoBoard
            Board="@Board"
            WinningSquareIds="@WinningSquareIds"
            OnSquareClick="@OnSquareClick" />
    </div>
</div>

@code {
    [Parameter]
    public List<BingoSquareData> Board { get; set; } = new();

    [Parameter]
    public HashSet<int> WinningSquareIds { get; set; } = new();

    [Parameter]
    public bool HasBingo { get; set; }

    [Parameter]
    public EventCallback<int> OnSquareClick { get; set; }

    [Parameter]
    public EventCallback OnReset { get; set; }
}
